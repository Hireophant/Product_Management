extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    include ../../partials/list-btn-users.pug
    .row
      .col-12
        +box-head("Danh sách người dùng")

    .row(data-users-not-friend=user.id)
      each userItem in users
        .col-6(user-id=userItem.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src=(userItem.avatar ? userItem.avatar : "/images/default-avatar.jpg")
                alt=userItem.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{userItem.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend=userItem.id
                ) Kết bạn
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend=userItem.id
                ) Hủy

block scripts
  script(type="module" src="/js/users.js")